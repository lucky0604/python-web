{
	"compilerOptions": {
		"target": "es5",
		"module": "es2015",
		"moduleResolution": "node",
		"sourceMap": true,
		"removeComments": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"baseUrl": ".",
		"paths": {
			"components/*": ["src/comments/*"],
			"utilities": ["src/utilities/*"]
		}
	},
	"exclude": [
		"node_modules"
	]
}